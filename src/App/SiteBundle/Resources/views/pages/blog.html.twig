{% extends 'SiteBundle:layouts:master.http.twig' %}

{% block content %}

    {% for post in posts %}

        <div class="panel panel-default">
            <div class="panel-heading">{{ post.name }}</div>
            <div class="panel-body"><b>{{ post.subject }}</b></div>
            <div class="panel-body" align="right">{{ post.created|date('l, F j, Y') }}</div>

            <div class="panel-body" align="right">
                <a href=" {{ path('posts_delete', { 'id': post.id }) }}" class="btn-danger">Delete</a>
            </div>

        </div>

    {% endfor %}

    <a href="{{ path('posts_new') }}" class="btn-primary">О фирме</a>

{% endblock %}


